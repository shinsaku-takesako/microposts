<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
		  <h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		  </h1>
		  <div class="user_info_detail">
		  	<% if @user.profile.present? %>
		  		<div><%= @user.profile %></div>
		  	<% end %>
		  	<% if @user.area.present? %>
					<div><span class="glyphicon glyphicon-map-marker"></span><%= @user.area %></div>
				<% end %>
				<div><span class="glyphicon glyphicon-calendar"></span><%= @user.created_at.strftime('%Y年%m月%d日') %>に登録</div>
			</div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
