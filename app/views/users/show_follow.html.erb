<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div><%= link_to @user.following_users.count.to_s + " Followings", followings_user_path %></div>
      <div><%= link_to @user.follower_users.count.to_s + " Followers", followers_user_path %></div>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @follow_users.any? %>
      <h3><%= @title =%> (<%= @follow_users.count %>)</h3>
      <ol class="show_follow">
        <% @follow_users.each do |follow_user| %>
          <%= render partial: 'follow_user', locals: { follow_user: follow_user } %>
        <% end %>
      </ol>
    <% else %>
      <h3>No <%= @title %>!</h3>
    <% end %>
  </div>
</div>